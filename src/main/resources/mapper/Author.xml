<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="main.java.dao.AuthorDAO">

	<select id="queryAuthorByID" parameterType="int" resultType="Author">
		SELECT
		id,name,description,status,is_display,update_time,update_user FROM author
		where
		id=#{id}
	</select>

	<select id="queryAllAuthors" resultType="Author">
		SELECT
		id,name,description,status,is_display,update_time,update_user FROM author
		limit #{offset},#{limit}
	</select>
	
	<insert id="addOneAuthor">
		INSERT ignore INTO author
		(name,description,status,is_display,update_user)
		VALUES
		(#{name},#{description},#{status},#{isDisplay},#{updateUser})
	</insert>

	<update id="updateOneAuthor">
		UPDATE author SET
		name = #{name,jdbcType=VARCHAR},
		description = #{description,jdbcType=VARCHAR},
		status = #{status,jdbcType=INTEGER},
		is_display=#{isDisplay,jdbcType=INTEGER}
		WHERE
		id = #{id,jdbcType=INTEGER}
	</update>

	<select id="queryAuthorsByCondition" resultType="Author">
		SELECT
		id,name,description,status,is_display,update_time,update_user FROM author
		where 1=1
		<if test="name != null and name !='' ">
			AND name like "%"#{name}"%"
		</if>
		<if test="description != null and description !='' ">
			AND description like "%"#{description}"%"
		</if>
		<if test="status != null and status !='' ">
			AND status = #{status}
		</if>
		<if test="isDisplay != null and isDisplay !='' ">
			AND is_display = #{isDisplay}
		</if>
	</select>
	
</mapper>
